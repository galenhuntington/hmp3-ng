-- ghc-options:         -prof -auto-all -Wall -fglasgow-exts -O2 -optc-O3 -funbox-strict-fields -Icbits -threaded -lncurses
-- ghc-options:         -Wall -fglasgow-exts -Onot -Icbits -threaded -lncurses
